<tiles-definitions>

	<definition name="layout.basic" template="/WEB-INF/layout/template.jsp">
		<put-attribute name="title" value="Spring Web MVC with Tiles 3" />
		<put-attribute name="navigation" value="/WEB-INF/layout/navigation.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="navId" value="" cascade="true" />
	</definition>
	
	<definition name="main" extends="layout.basic">
		<put-attribute name="navId" value="main" cascade="true" />
		<put-attribute name="body" value="/WEB-INF/main/index.jsp" />
	</definition>
	
	<definition name="layout.users" extends="layout.basic">
		<put-attribute name="navId" value="users" cascade="true" />
	</definition>
	<definition name="users.list" extends="layout.users">
		<put-attribute name="editable-form" value="/WEB-INF/layout/editable-form.jsp" cascade="true" />
		<put-attribute name="body" value="/WEB-INF/users/list.jsp" />
	</definition>
	<definition name="users.details" extends="layout.users">
		<put-attribute name="body" value="/WEB-INF/users/details.jsp" />
	</definition>
	<definition name="users.edit" extends="layout.users">
		<put-attribute name="body" value="/WEB-INF/users/edit.jsp" />
	</definition>
	<definition name="users.new" extends="layout.users">
		<put-attribute name="body" value="/WEB-INF/users/new.jsp" />
	</definition>
	<definition name="users.change-password" extends="layout.users">
		<put-attribute name="body" value="/WEB-INF/users/change-password.jsp" />
	</definition>
	<definition name="users.registration" extends="layout.users">
		<put-attribute name="body" value="/WEB-INF/users/registration.jsp" />
	</definition>
	
	<definition name="errors.400" extends="layout.basic">
		<put-attribute name="body" value="/WEB-INF/errors/400.jsp" />
	</definition>
	<definition name="errors.404" extends="layout.basic">
		<put-attribute name="body" value="/WEB-INF/errors/404.jsp" />
	</definition>
	<definition name="errors.500" extends="layout.basic">
		<put-attribute name="body" value="/WEB-INF/errors/500.jsp" />
	</definition>
	
</tiles-definitions>
